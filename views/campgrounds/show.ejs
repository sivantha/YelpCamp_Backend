<%- include('../partials/header') %>

<div class="container my-2">
  <div class="row my-2" style="display: flex; flex-wrap: wrap;">
    <div class="col-lg-3 col-md-4">
      <div class="card" style="height: 400px;">
        <div class="card-body" style="overflow:hidden;">
          <h4 class="card-title"><%= campground.name %></h4>
          <div class="card-subtitle">
            <p class="card-text"><%= campground.description.substring(0,60) %></p>
          </div>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Location: Sri Lanka</li>
          <li class="list-group-item">Legal: Yes</li>
          <li class="list-group-item">Season: August</li>
        </ul>
        <div class="card-footer">
          <a href="#" class="card-link">Link 1</a>
          <a href="#" class="card-link">Link 2</a>
        </div>
      </div>
      <div class="card my-2">
        <div class="card-image">
          <div class="z-depth-1-half map-container-5" style="height: 400px;">
            <iframe src="https://maps.google.com/maps?q=Sri&Lanka&t=&z=6&ie=UTF8&iwloc=&output=embed" frameborder="0"
              style="border:0;height: 100%; width: 100%;" allowfullscreen></iframe>
          </div>
        </div>
        <div class="card-body">
          <h4 class="card-title">Sri Lanka</h4>
        </div>
      </div>
    </div>
    <div class="col-lg-9 col-md-8">
      <div class="card">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <!-- <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                  <li data-target="#carouselExampleIndicators" data-slide-to="2"></li> -->
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="<%= campground.image %>" style="object-fit: cover; height: 400px;">
            </div>
            <!-- <div class="carousel-item">
                    <img src="..." class="d-block w-100" alt="...">
                  </div>
                  <div class="carousel-item">
                    <img src="..." class="d-block w-100" alt="...">
                  </div> -->
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <div class="card-body">
          <p class="card-text"><%= campground.description %></p>
        </div>
      </div>
      <div class="card my-2">
        <div class="card-body">
          <h3>Comments</h3>
          <hr>
          <br>
          <% campground.comments.forEach(function(comment){ %>
          <span class="float-right">10 days ago</span>
          <h5><%= comment.author %></h5>
          <p><%= comment.text %></p>
          <hr>
          <br>
          <% })  %>
          <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-primary">Add a comment</a>
        </div>
      </div>
    </div>
  </div>

  <br>

  <br>

<%- include('../partials/footer') %>