<%- include('../partials/header') %>

<div class="row my-2 justify-content-center">
    <div class="col-sm-8 col-md-6 col-lg-4 col-12 ">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title" style="text-align:center;">Add a new comment</h5>
                <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                    <div class="form-group">
                        <textarea class="form-control" rows="3" type="text" name="comment[text]"
                            placeholder="enter your comment here"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-md btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a class="btn btn-secondary btn-block" href="/campgrounds/<%= campground._id %>">Go back</a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>